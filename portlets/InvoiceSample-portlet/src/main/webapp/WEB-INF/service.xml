<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="com.covisint.papi.sample.portlet">
    <author>Nitin R. Khobragade</author>
    <namespace>Invoice</namespace>
    <entity name="Consumer" local-service="true" remote-service="true">
        <!-- PK Fields -->
        <column name="consumerId" type="long" primary="true"/>
        <!-- Other Fields -->
        <column name="consumerName" type="String"/>
        <column name="password" type="String"/>
        
        <order by="asc">
            <order-column name="consumerId"/>
        </order>
        
        <!-- Finder Methods -->
        <finder return-type="Consumer" name="ConsumerName">
            <finder-column name="consumerName"/>
        </finder>
	</entity>
	<entity name="Invoice" local-service="true" remote-service="true">
		<!-- PK Fields -->
		<column name="invoiceId" type="long" primary="true"/>
		<!-- Other fields -->
		<column name="path" type="String"/>
		<column name="consumerId" type="long"/>
		
		<!-- Finder Methods -->
		<finder return-type="Collection" name="InvoiceForConsumer">
			<finder-column name="consumerId"/>
		</finder>
	</entity>
</service-builder>